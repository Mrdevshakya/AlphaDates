rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to their own profile pictures
    // and allow public read access to profile pictures (for displaying in app)
    match /profilePictures/{userId}/{pictureId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;  // Authenticated write access
    }
    
    // Allow authenticated users to read and write to their own posts
    // and allow public read access to posts (for displaying in app)
    match /posts/{userId}/{mediaId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;  // Authenticated write access
    }
    
    // Allow authenticated users to read and write to their own stories
    // and allow public read access to stories (for displaying in app)
    match /stories/{userId}/{storyId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;  // Authenticated write access
    }
  }
}
